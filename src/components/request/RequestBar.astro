---
import MethodSelector from "./MethodSelector.astro";
import sendIcon from "../../assets/icons/send.svg?raw";
---

<!-- Desktop: horizontal layout | Mobile: stacked layout -->
<div class="p-4 flex flex-col md:flex-row md:items-center gap-2 md:gap-0">
	<!-- Method selector + URL input (full width on mobile, flex-1 on desktop) -->
	<div class="flex items-center gap-0 flex-1">
		<MethodSelector />
		<input
			type="url"
			placeholder="Enter URL or paste text"
			value="https://api.example.com/users"
			class="flex-1 px-4 py-2 bg-pm-bg-tertiary border-y border-pm-border md:border-r-0 text-sm text-pm-text-primary placeholder:text-pm-text-tertiary focus:outline-none focus:border-pm-accent rounded-r md:rounded-r-none"
		/>
	</div>

	<!-- Send button (full width on mobile, auto on desktop) -->
	<button
		type="button"
		class="w-full md:w-auto inline-flex items-center justify-center gap-2 px-6 py-2 bg-pm-accent hover:bg-pm-accent-hover transition-colors text-white font-semibold text-sm rounded md:rounded-l-none md:rounded-r"
	>
		<span>Send</span>
		<div class="w-4 h-4" aria-hidden="true">
			<Fragment set:html={sendIcon} />
		</div>
	</button>
</div>
