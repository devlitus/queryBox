---
interface Props {
	status: number;
	statusText: string;
	time: number;
	size: string;
}

const { status, statusText, time, size } = Astro.props;

// Determine status color
let statusColor = "text-pm-status-success";
if (status >= 300 && status < 400) {
	statusColor = "text-pm-status-redirect";
} else if (status >= 400) {
	statusColor = "text-pm-status-error";
}
---

<div class="flex items-center gap-6 px-4 py-2 bg-pm-bg-secondary border-b border-pm-border text-xs">
	<div class="flex items-center gap-2">
		<span class="text-pm-text-secondary">Status:</span>
		<span class={`font-semibold ${statusColor}`}>{status} {statusText}</span>
	</div>
	<div class="h-4 w-px bg-pm-border"></div>
	<div class="flex items-center gap-2">
		<span class="text-pm-text-secondary">Time:</span>
		<span class="text-pm-text-primary font-medium">{time}ms</span>
	</div>
	<div class="h-4 w-px bg-pm-border"></div>
	<div class="flex items-center gap-2">
		<span class="text-pm-text-secondary">Size:</span>
		<span class="text-pm-text-primary font-medium">{size}</span>
	</div>
</div>
